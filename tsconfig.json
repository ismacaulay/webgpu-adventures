{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "toolkit": ["toolkit"],
            "rendering": ["rendering"],
            "utils": ["utils"]
        },
        "target": "es6",
        "sourceMap": true,
        "module": "esnext",
        "moduleResolution": "node",
        "removeComments": true,
        "preserveConstEnums": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true
    },
    "exclude": ["public"]
}
